{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    // Workaround for https://github.com/angular/angular/issues/17863.
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks":  false
  },
  "exclude": [ "bin", "node_modules" ]
}
